{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block description %}Liste des utilisateurs{% endblock %}

{# JQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
<link href="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.css" rel="stylesheet"> 
<script src="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.js"></script>
<script>
    $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.0.7/i18n/fr-FR.json',
            },
        });
    } );
</script>
{% endblock %}



{% block main %}
    <h1 class="text-center my-3 display-5">Liste des utilisateurs</h1>

    {% include 'components/alert.html.twig' %}


    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Rôles</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td>{{user.email}}</td>
                    <td>
                        {% if user.isVerified %}
                            <p>Oui</p>
                            <p>Le {{user.verifiedAt|format_datetime()}}</p>
                        {% endif %}
                    </td>
                    <td>
                        {% for role in user.roles %}
                            <span class="m-2 badge text-bg-success">{{role}}</span>
                        {% endfor %}
                    </td>
                    <td>{{user.createdAt|format_datetime()}}</td>
                    <td>{{user.updatedAt|format_datetime()}}</td>
                    <td>
                            {% if "ROLE_SUPER_ADMIN" not in user.roles %}
                                    <a class="mx-2 text-secondary" href="{{path('admin_user_edit_roles', {'id':user.id})}}"><i class="fas fa-edit"></i></a>
                                    {# <a onclick="event.preventDefault(); return confirm('Confirmer la suppression?') && document.querySelector('#delete_contact_{{contact.id}}_form').submit();" 
                                        class="mx-2 text-danger" 
                                        href=""
                                    >
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                    <form id="delete_contact_{{contact.id}}_form" method="contact" action="{{path('admin_user_delete', {'id':contact.id})}}">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="csrf_token" value="{{csrf_token('delete_contact_'~contact.id)}}">
                                    </form> #}   
                            {% endif %}
                            
                    </td>
                </tr>
            {% endfor %}
                
            </tbody>
        </table>
    </div>
{% endblock %}