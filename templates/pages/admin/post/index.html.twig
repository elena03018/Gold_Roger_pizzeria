{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste de pizzas{% endblock %}

{% block description %}Liste de pizzas{% endblock %}

{# JQuery #}
{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{# Datatables #}
{% block dataTables %}
<link href="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.css" rel="stylesheet"> 
<script src="https://cdn.datatables.net/v/bs5/dt-2.0.7/datatables.min.js"></script>
<script>
    $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.0.7/i18n/fr-FR.json',
            },
        });
    } );
</script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des pizzas</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin_post_create')}}" class="btn btn-warning shadow"><i class="fas fa-plus"></i> Nouvelle pizza</a>
    </div>

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Ingredients</th>
                    <th>Prix</th>
                    <th>Catégorie</th>
                    <th>Publié?</th>
                    <th>Créé le</th>
                    <th>Modifié le</th>
                    <th>Options</th>
                </tr>
            </thead>
            {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>
                        <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}">
                    </td>
                    <td>{{post.title}}</td>
                    <td>{{post.ingredients}}</td>
                    <td>{{post.price}}</td>
                    <td>{{post.category.name}}</td>
                    <td>
                        {% if post.isPublished %}
                                <p>Publié le {{ post.publishedAt|format_date() }}</p>
                            {% else %}
                                <p>Pas encore</p>
                        {% endif %}
                        <form method="POST" action="{{path('admin_post_publish', {'id':post.id})}}"class="d-flex justify-content-center align-items-center">
                            <div class="form-check form-switch">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('publish_post_'~post.id)}}">
                                <input type="hidden" name="_method" value="PUT">
                                <input   {{ post.isPublished ? 'checked' : '' }} onclick="return confirm('Confirmer cette action?');" onchange="this.form.submit()" class="form-check-input" type="checkbox" role="switch" id="switch_{{post.id}}" checked>
                                <label class="form-check-label" for="switch_{{post.id}}"></label>
                            </div>
                        </form>
                    </td>
                    <td>{{post.createdAt|format_datetime}}</td>
                    <td>{{post.updatedAt|format_datetime}}</td>
                    <td>
                        <a href="{{path('admin_post_edit', {'id':post.id})}}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form class="d-inline" action="{{path('admin_post_delete', {'id':post.id})}}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{csrf_token('delete_post_'~post.id)}}">
                                <input onclick="return confirm('En supprimant cet objet, vous supprimez également tous les articles qui lui sont associés. Vous confirmez?')" type="submit" class="btn btn-sm btn-danger mt-2" value="Supprimer">
                            </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}