{# Ma feuille de style #}
<link rel="stylesheet" href="{{asset('css/app.css')}}">
</head>
<body class="h-100">

<main class="container my-5">
    <div class="row">
        <div class="col-lg-7  text-center">
            <img src="{{asset('images/visitor/authentication/foto-login.jpg')}}" class="img-fluid">
        </div>
        <div class="col-lg-5 flex-column d-flex justify-content-center align-items-center">

            <form method="POST" class="w-100">
                {% if error  %}
                    <div class="text-center alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% include "components/_alert.html.twig" %}


                <div class="mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                
                <div class="mb-3">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                
                <div class="mb-3">
                    <div class="row">
                        <div class="col-md-6 my-1">
                            <label>
                                <input type="checkbox" name="_remember_me" checked>
                                Se souvenir de moi
                            </label>
                        </div>
                         <div class="col-md-6  text-lg-end">
                            <a href="{{path('visitor_authentication_forgot_password_request')}}">Mot de passe oublié?</a>
                        </div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
                <div>
                    <input formnovalidate type="submit" class="w-100 btn btn-warning shadow" value="Se connecter">
                </div>  
            </form>



            <div class="text-center mt-3">
                <p>Vous n'avez pas encore compte? <a href="{{path('visitor_registration_register')}}">Inscrivez-vous</p>
                <p><a href="{{path('visitor_welcome_index')}}">Retour à l'accueil</a></p>
            </div>    
        </div>
    </div>
</main>


