{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Contact{% endblock %}

{% block description %}Contactez-nous{% endblock %}

{% block main %}
    <main>
        
        {# Header component #}
        {% include 'components/visitor/header.html.twig' with{'h1': "Contactez-nous"}%}

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6">

                {% include 'components/alert.html.twig' %}
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 mb-3">

                        

                        <label for="contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                        <div class="text-danger">{{ form_errors(form.firstName)}}</div>
                        {{ form_widget(form.firstName, {'attr': {'class':'form-control', 'autofocus':'autofocus'}}) }}
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="contact_form_lastName">Nom <span class="text-danger">*</span></label>
                        <div class="text-danger">{{ form_errors(form.lastName)}}</div>
                        {{ form_widget(form.lastName, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="contact_form_email">Email <span class="text-danger">*</span></label>
                        <div class="text-danger">{{ form_errors(form.email)}}</div>
                        {{ form_widget(form.email, {'attr': {'class':'form-control'}}) }}
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="contact_form_phone">Téléphone</label>
                        <div class="text-danger">{{ form_errors(form.phone)}}</div>
                        {{ form_widget(form.phone, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>  
                <div class="mb-3">
                    <label for="contact_form_message">Message <span class="text-danger">*</span></label>
                    <div class="text-danger">{{ form_errors(form.message)}}</div>
                    {{ form_widget(form.message, {'attr': {'class':'form-control', 'rows': '6'}}) }}
                </div>
                <div>
                    <input formnovalidate type="submit" class="btn btn-success shadow" value="Envoyer">
                </div>
                {{ form_end(form) }}
            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center my-3">
                <div class="text-center text-md-start jd-contact-center">
                    <p><i class="fa-solid fa-envelope"></i> : {{setting.email}}</p>
                    <p><i class="fa-solid fa-phone"></i> : {{setting.phone}}</p>
                    <p><i class="fa-solid fa-house"></i> : {{setting.address}}</p>
                    <p><i class="fa-solid fa-clock"></i> : {{setting.hours}}</p>
                    {# <p><i class="fa-brands fa-instagram"></i> : {{setting.instagram}}</p> #}
                    {# <p><i class="fa-brands fa-facebook"></i> : {{setting.facebook}}</p> #}
                </div>
                <div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3086.861417340357!2d8.530995175426439!3d39.31406472201261!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12e70b1eb4c033d1%3A0x77cfdee6d92322!2sVia%20Camillo%20Benso%20Conte%20di%20Cavour%2C%2016%2F18%2C%2009016%20Iglesias%20SU%2C%20Italia!5e0!3m2!1sit!2sfr!4v1717006404553!5m2!1sit!2sfr" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="w-100 h-100"></iframe>
                </div>
            </div>
        </div>
    </div>

    </main>
{% endblock %}