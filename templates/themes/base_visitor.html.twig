                        <a href="{{path('visitor_authentication_login')}}" class="btn connect-button"> Connexion</a>
                    {% endif %}
                    </div>
                </div>
                </div> #}

            </div>
            
        </nav>


        {# The specific content for each page #}
        <main class="container-fluid">
            {% block main %}{% endblock %}
        </main>


        {# Footer #}
        <footer class="bg-warning text-dark text-center py-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="cursor-pointer"><a href="{{path('visitor_menu_index')}}" class="text-dark">©Gold Roger Pizzeria - Mentions légales</a></p>
                        
                    </div>

                    <div class="col-md-6">
                        <a class="text-dark" target="_blank" href="{{settingService.setting.instagram}}">
